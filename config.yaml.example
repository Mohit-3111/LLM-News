# Copy this file to config.yaml and fill in your API keys

NEWS_API_ORG:
  API_KEY: "your_newsapi_key_here"

GOOGLE_NEWS:
  API_KEY: "your_gnews_key_here"

MONGODB:
  CONNECTION_URL: "mongodb+srv://username:password@cluster.mongodb.net/"
  DATABASE_NAME: "llm_news"
  COLLECTION_NAME: "articles"

SCRAPER:
  USER_AGENT: "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36"
  REQUEST_TIMEOUT: 10
  NEWSAPI_COUNT: 5
  GNEWS_COUNT: 2

SCHEDULER:
  INTERVAL_MINUTES: 15
  RUN_ON_START: true

# LLM Configuration (Groq - Free Tier)
# Get your free API key at: https://console.groq.com
LLM:
  PROVIDER: "groq"
  API_KEY: "your_groq_api_key_here"
  MODEL: "llama-3.3-70b-versatile"
  MAX_TOKENS: 2048
  TEMPERATURE: 0.7

# Content Curation Settings
CONTENT_CURATION:
  BATCH_SIZE: 10
  DELAY_BETWEEN_CALLS: 2  # seconds, to respect rate limits

# Image Generation Settings (Pollinations.ai - Free, Unlimited)
IMAGE_GENERATION:
  ENABLED: true
  OUTPUT_DIR: "generated_images"
  BATCH_SIZE: 10
  DELAY_BETWEEN_CALLS: 1  # seconds, be nice to the API
  
  # Platform-specific dimensions
  WEBSITE:
    WIDTH: 1280
    HEIGHT: 720
  TELEGRAM:
    WIDTH: 512
    HEIGHT: 512
  INSTAGRAM:
    WIDTH: 1080
    HEIGHT: 1350

# ImageKit Cloud Storage (Free Tier: 20GB storage, 20GB bandwidth)
# Get your private key at: https://imagekit.io/dashboard/developer/api-keys
IMAGEKIT:
  PRIVATE_KEY: "your_private_key_here"
  PUBLIC_KEY: "your_public_key_here"
  URL_ENDPOINT: "your_url_endpoint_here"

# Article Ranking Settings (LLM-based selection)
# When enabled, selects only the best trending article from all fetched
ARTICLE_RANKING:
  ENABLED: true   # true = select best trending, false = process all articles
  TOP_N: 1        # Number of best articles to keep (when enabled)

